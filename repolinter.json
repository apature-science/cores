{
    "$schema": "https://raw.githubusercontent.com/prototypicalpro/repolinter/master/rulesets/schema.json",
    "axioms": {},
    "rules": {
        "license-file-exists": {
            "level": "error",
            "rule": {
                "type": "file-existence",
                "options": {
                    "files": ["LICENSE*", "COPYING*"], 
                    "nocase": true
                }
            }
        },
        "readme-file-exists": {
            "level": "error",
            "rule": {
                "type": "file-existence",
                "options": {
                    "files": ["README*"],
                    "nocase": true
                }
            }
        },
        "code-of-conduct-file-exists": {
            "level": "error",
            "rule": {
                "type": "file-existence",
                "options": {
                    "files": [
                        "{docs/,.github/,}CODEOFCONDUCT*", 
                        "{docs/,.github/,}CODE-OF-CONDUCT*", 
                        "{docs/,.github/,}CODE_OF_CONDUCT*"
                    ],
                    "nocase": true
                }
            }
        }
    }
}